    </style>

    <style name="Animation.SlimRecentScreenOrig.Left" parent="">
        <item name="android:windowEnterAnimation">@anim/slim_recent_screen_enter_orig_left</item>
        <item name="android:windowExitAnimation">@anim/slim_recent_screen_exit_orig_left</item>
    </style>

    <style name="card_header_favorite_icon">
        <item name="android:layout_width">@dimen/recent_favorite_icon_size</item>
        <item name="android:layout_height">@dimen/recent_favorite_icon_size</item>
